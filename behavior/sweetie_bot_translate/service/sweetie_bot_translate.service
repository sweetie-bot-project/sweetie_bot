[Unit]
Description=Sweetie Bot LibreTranslate API service

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
# change to your user
User=sweetie
WorkingDirectory=$HOME/repos/translate/LibreTranslate
ExecStart=-/bin/bash -c "source $HOME/miniconda3/etc/profile.d/conda.sh && \
  conda activate translate && \
  libretranslate --host 0.0.0.0 --port 5001 --debug"
Restart=on-failure
TimeoutSec=600
