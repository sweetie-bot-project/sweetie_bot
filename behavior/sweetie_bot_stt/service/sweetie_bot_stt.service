[Unit]
Description=Sweetie Bot STT API service

[Install]
WantedBy=multi-user.target

[Service]
Type=simple
# change to your user
User=sweetie
# set your production variables in .env
Environment=CONFIGURATION_SETUP="config.ProductionConfig"
ExecStart=-/bin/bash -c "source /opt/ros/sweetie_bot/setup.bash && rosrun sweetie_bot_stt stt_api_service_node"
Restart=on-failure
TimeoutSec=600 
